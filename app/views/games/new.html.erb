<h1>New Game</h1>
<div class="container">
  <% @letters.each do |letter| %>
    <div class="letter-box"><%= letter.capitalize %></div>
  <% end %>
</div>

<p>Whats the longest word you can find?</p>
<form action="/score" class="form" method="post">
  <input type="text" name="userword" class="word">
  <input type="submit" value="Play" class="play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag  'letters', @letters %>
</form>
